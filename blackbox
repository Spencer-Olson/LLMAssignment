<body>
    <div class="header">
        <h1>Dragon's World Game Development</h1>
    </div>
    <div class="main">
        <h2>About Us</h2>
        <p>Welcome to Dragon's World, a game development company that specializes in creating immersive and engaging games for all platforms.</p>
        <h2>Our Games</h2>
        <p>Check out our latest games and upcoming releases.</p>
        <div class="game-container">
            <div class="dragon" id="dragon"></div>
            <div class="obstacle" id="obstacle"></div>
            <p id="score">Score: 0</p>
        </div>
    </div>
    <div class="footer">
        &copy; 2024 Dragon's World Game Development. All rights reserved.
    </div>
    <script>
        let dragon = document.getElementById("dragon");
        let obstacle = document.getElementById("obstacle");
        let score = document.getElementById("score");
        let cross = true;
        let scoreValue = 0;
        let obstacleSpeed = 2;

        document.addEventListener("keydown", (e) => {
            if (e.key === "ArrowUp") {
                dragon.style.top = `${parseInt(dragon.style.top) - 10}px`;
            }
        });

        setInterval(() => {
            obstacle.style.left = `${parseInt(obstacle.style.left) + obstacleSpeed}px`;
            if (parseInt(obstacle.style.left) > window.innerWidth) {
                obstacle.style.left = "0px";
                obstacleSpeed += 0.5;
            }
            if (checkCollision()) {
                if (cross) {
                    scoreValue++;
                    score.textContent = `Score: ${scoreValue}`;
                    cross = false;
                }
            } else {
                cross = true;
            }
        }, 10);

        function checkCollision() {
            let dragonRect = dragon.getBoundingClientRect();
            let obstacleRect = obstacle.getBoundingClientRect();
            if (dragonRect.left < obstacleRect.right &&
                dragonRect.right > obstacleRect.left &&
                dragonRect.top < obstacleRect.bottom &&
                dragonRect.bottom > obstacleRect.top) {
                return true;
            }
            return false;
        }
    </script>
